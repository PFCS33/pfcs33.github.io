<div class="grid-item">
  {% if project.redirect %}
    <a href="{{ project.redirect }}">
  {% endif %}
  <div class="card hoverable" style="position: relative;">
    {% if project.tag %}
      <span class="project-tag">{{ project.tag }}</span>
    {% endif %}
    {% if project.redirect contains 'github.com' %}
      <span class="project-github-tag"><i class="fa-brands fa-github"></i></span>
    {% endif %}
    {% if project.img %}
      {%
        include figure.liquid
        loading="eager"
        path=project.img
        sizes = "250px"
        alt="project thumbnail"
        class="card-img-top"
      %}
    {% endif %}
    <div class="card-body">
      <h2 class="card-title">{{ project.title }}</h2>
      <p class="card-text">{{ project.description }}</p>
      {% if project.tech %}
        <div class="project-tech">
          {% for t in project.tech %}
            {% assign info = site.data.icons[t] %}
            <span class="tech-tag">
              {% if info.skillicon %}
                <img
                  class="tech-icon skill-icon-themed"
                  src="https://skillicons.dev/icons?i={{ info.skillicon }}&theme=light"
                  data-icon="{{ info.skillicon }}"
                  alt="{{ info.label }}"
                  onerror="if(typeof skillIconFallback==='function'){skillIconFallback(this);}else{this.onerror=null;this.style.display='none';}"
                >
              {% elsif info.fa_icon %}
                <i class="{{ info.fa_icon }} tech-icon-fa"></i>
              {% endif %}
              {{ info.label }}
            </span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  {% if project.redirect %}
    </a>
  {% endif %}
</div>
